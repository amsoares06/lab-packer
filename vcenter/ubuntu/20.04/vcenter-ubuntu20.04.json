{
    "variables": {
        "version" : "1.0.5",
        "template_name": "packer-ubuntu20.04",
        "username": "packer",
        "password": "packer",
        "vcenter_server": "",
        "vcenter_username": "",
        "vcenter_password": "",
        "vcenter_datastore": "",
        "iso_url": "https://mirror.nl.datapacket.com/ubuntu-releases/20.04.2/ubuntu-20.04.2-live-server-amd64.iso",
        "iso_checksum": "sha256:d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423"
      },

    "builders": [
      {
        "type": "vsphere-iso",
        "vcenter_server": "{{ user `vcenter_server` }}",
        "username": "{{ user `vcenter_username` }}",
        "password": "{{ user `vcenter_password` }}",
        "insecure_connection": true,
        "datacenter": "dc-home",
        "http_directory": "vcenter/ubuntu/20.04/http",
        "boot_wait": "5s",
        "boot_command": [
          "<esc><esc><esc><enter><wait>",
          "/casper/vmlinuz root=/dev/sr0 initrd=/casper/initrd autoinstall ",
          "ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
          "<enter>"
          ],
        "cpus": 1,
        "cpu_cores": 1,
        "ram": 2048,
        "vm_name": "{{ user `template_name` }}-{{ user `version` }}",
        "cluster": "cluster-home",
        "datastore": "{{ user `vcenter_datastore` }}",
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
        "iso_url": "{{ user `iso_url` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "vm_version": "14",
        "guest_os_type": "ubuntu64Guest",
        "storage": [
          {
            "disk_size": 40960,
            "disk_thin_provisioned": true
          }
        ],
        "network_adapters": [
          {
            "network": "VM Network",
            "network_card": "vmxnet3"
          }
        ],
        "communicator": "ssh",
        "ssh_pty": true,
        "ssh_username": "packer",
        "ssh_password": "packer",
        "ssh_timeout": "30m",
        "ssh_handshake_attempts": "100",
        "convert_to_template": true,
        "folder": "templates"
      }
    ],

    "provisioners": [
        {
          "type": "shell",
          "inline": ["ls /"]
        }
    ]
}
