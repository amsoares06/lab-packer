{
    "variables": {
        "template_name": "packer-centos8",
        "username": "packer",
        "password": "packer",
        "vcenter_server": "",
        "vcenter_username": "",
        "vcenter_password": "",
        "vcenter_insecure_connection": "",
        "vcenter_datacenter": "",
        "vcenter_cluster": "",
        "vcenter_datastore": "",
        "iso_url": "http://nl.mirrors.clouvider.net/CentOS/8.4.2105/isos/x86_64/CentOS-8.4.2105-x86_64-boot.iso",
        "iso_checksum": "sha256:c79921e24d472144d8f36a0d5f409b12bd016d9d7d022fd703563973ca9c375c"
      },

    "builders": [
        {
          "type": "vsphere-iso",
          "name": "{{ user `template_name` }}",

          "vcenter_server": "{{ user `vcenter_server` }}",
          "username": "{{ user `vcenter_username` }}",
          "password": "{{ user `vcenter_password` }}",
          "insecure_connection": "{{ user `vcenter_insecure_connection` }}",
          "datacenter": "{{ user `vcenter_datacenter` }}",
          "cluster": "{{ user `vcenter_cluster` }}",
          "datastore": "{{ user `vcenter_datastore` }}",

          "vm_name": "{{ user `template_name` }}",
          "cpus": 1,
          "cpu_cores": 1,
          "ram": 1024,
          "storage": [
              {
                  "disk_size": 40960,
                  "disk_thin_provisioned": true
              }
          ],
          "network_adapters": [
              {
                  "network": "VM Network",
                  "network_card": "vmxnet3"
              }
          ],
          "vm_version": "14",
          "guest_os_type": "centos8_64Guest",

          "iso_url": "{{ user `iso_url` }}",
          "iso_checksum": "{{ user `iso_checksum` }}",

          "http_directory": "vcenter/centos/8/kickstart",
          "boot_wait": "20s",
          "boot_command": [
              "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>",
              "<wait10><wait10><wait10>"
          ],

          "ssh_username": "{{ user `username` }}",
          "ssh_password": "{{ user `password` }}",

          "convert_to_template": true,
          "folder": "templates"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "source": "files/linux/authorized_keys",
            "destination": "/home/packer/.ssh/authorized_keys"
        },
        {
            "type": "shell",
            "inline": [
                "chmod 600 /home/packer/.ssh/authorized_keys"
            ]
        },
        {
            "type": "shell",
            "execute_command": "sudo -E sh -x '{{.Path}}'",
            "scripts": [
                "scripts/linux/update-system.sh"
            ]
        }
    ]
}
